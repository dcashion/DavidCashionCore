@model Person

@{
    ViewData["Title"] = "About";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<ul>
    <li>First: @Model.FirstName</li>
    <li>Last: @Model.LastName</li>
    <li>DOB: @Model.Birthdate.ToString("yyyyMMdd");</li>
</ul>

<p>Use this area to provide additional information.</p>

<form asp-controller="Home" asp-action="About" method="post">
    <div class="form-group">
        <label for="firstname">First: </label>
        <input asp-for="FirstName" class="form-control" type="text" placeholder="First Name"/>
    </div>

    <div class="form-group">
        <label for="lastname">Last: </label>
        <input asp-for="LastName" type="text" placeholder="Last Name" />
    </div>

    <div class="form-group">
        <label for="birthdate">DOB: </label>
        <input asp-for="Birthdate" type="datetime" placeholder="DOB" />
    </div>

    <button type="submit" value="Submit">Submit</button>

</form>