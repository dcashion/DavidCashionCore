@using DavidCashion.Models;


@model SendMessageInfo


<form asp-controller="HomeController" asp-action="SendTextMessage" method="post" >
    <div class="form-group">
        <label for="SenderName">Sender's Name:</label>
        <input asp-for="SenderName" class="form-control" type="text"placeholder="Name" />
    </div>

    <div class="form-group">
        <label for="SenderAddress">Sender's Address:</label>
        <input asp-for="SenderAddress"class="form-control" type="text" placeholder="Address"/>
    </div>

    <div class="form-group">
        <label for="Message">Message Text:</label>
        <input class="form-control" rows="5" type="text" placeholder="Message"/>
    </div>

    <button class="btn btn-danger btn-default" type="submit" value="Submit">Submit</button>

    

</form>

